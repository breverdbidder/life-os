{
  "autonomousMode": true,
  "humanEscalation": {
    "allowedReasons": ["subscription_required", "payment_authorization"],
    "forbiddenReasons": ["technical_decision", "adhd_intervention", "swim_data", "learning_capture", "error_recovery"]
  },
  "permissions": {
    "allow": [
      "Bash(python -m pytest:*)",
      "Bash(python -m black:*)",
      "Bash(python src/:*)",
      "Bash(node:*)",
      "Bash(npm run:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(gh workflow:*)",
      "Bash(gh run:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(find:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./**/*secret*)",
      "Read(./**/*credential*)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)",
      "Bash(curl -d:*)",
      "Bash(rm -rf /)"
    ]
  },
  "env": {
    "PYTHONPATH": "./src",
    "TZ": "America/New_York"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '‚úÖ File modified'",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'üìù Committing changes...'",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'üß† Life OS Session Started | ADHD Mode Active'",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Check for abandoned tasks. Were any tasks left INITIATED or IN_PROGRESS without completion? If tasks abandoned, respond {\"decision\":\"block\",\"reason\":\"Task [name] abandoned - acknowledge or defer\"}. If all complete or properly deferred, respond {\"decision\":\"approve\"}."
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'üîî Notification triggered'",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "attribution": {
    "commit": "üß† Life OS Session\n\nCo-Authored-By: Claude <noreply@anthropic.com>",
    "pr": "üß† Generated by Life OS"
  }
}
